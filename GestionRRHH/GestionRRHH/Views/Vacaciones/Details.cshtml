@model GestionRRHH.Models.Vacacione

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Vacaciones</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Desde")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>

        <dt>
            @Html.DisplayName("Hasta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaFin)
        </dd>

        <dt>
            @Html.DisplayName("Correspondientes al año")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correspondiente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comentario)
        </dt>

        <dd> 
            @Html.DisplayFor(model => model.Comentario)
        </dd>

        <dt>
            @Html.DisplayName("Empleado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empleado.Codigo + " => " + model.Empleado.Nombre + " " + model.Empleado.Apellido)
        </dd>

    </dl>
</div>
<p>
     @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("<< Volver a la lista", "Index", null, new { @class = "btn btn-primary" })
</p>
