@model IEnumerable<GestionRRHH.Models.Empleado>

@{
    ViewBag.Title = "Empleados";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo empleado", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
